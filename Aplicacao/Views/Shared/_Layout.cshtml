<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor de Contatos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 bg-dark">
            <div class="container">
                <span class="navbar-brand" asp-area="">Gestor de Contatos</span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 menuLogado">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="ListarTodas">Pessoas Cadastradas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Adicionar">Adicionar Pessoa</a>
                        </li>                        
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse order-3">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item menuNaoLogado" style="display:none">
                            <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Cadastro">Cadastrar-se</a>
                        </li>
                        <li class="nav-item menuNaoLogado" style="display:none">
                            <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item menuLogado">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" id="logoff">Logoff</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-serializejson/jquery.serializejson.js"></script>
    <script src="~/lib/emodal/dist/eModal.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Menu.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
